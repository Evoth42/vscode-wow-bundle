{
	"name": "Monokai (wow-bundle)",
	"include": "./theme-monokai-dimmed/dimmed-monokai.json",
	"settings": [
		// Comments -- just add italics to the current style
		{
			"scope": "comment",
			"settings": {
				"fontStyle": "italic"
			}
		},

		// Comments -- just add italics to the current style
		{
			"scope": [
				"comment.toc",
				"comment.lua"
			],
			"settings": {
				"fontStyle": "italic"
			}
		},

		// Lua colors ONLY - except for comments above, we dont mess with other languages
		{
			"scope": "support.function.lua",
			"settings": {
				"foreground": "#9872a2"
			}
		},
		{
			"scope": "support.function.metamethod.lua",
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"scope": "keyword.operator.lua, keyword.operator.logical.lua",
			"settings": {
				"foreground": "#676867"
			}
		},
		{
			"scope": "variable.language.lua, support.variable.lua",
			"settings": {
				"foreground": "#569cd6"
			}
		},
		{
			"scope": "constant.language.lua, support.constant.lua",
			"settings": {
				"foreground": "#9cdcfe"
			}
		},
		{
			"scope": "constant.character.escape.lua",
			"settings": {
				"foreground": "#d1e64e"
			}
		},

		// Word of Warcraft .toc file colors
		{
			"scope": "keyword.operator.toc",
			"settings": {
				"foreground": "#9cdcfe"
			}
		},
		{
			"scope": "keyword.control.toc",
			"settings": {
				"foreground": "#9872a2"
			}
		},
		{
			"scope": "keyword.control.x.toc",
			"settings": {
				"foreground": "#6089b4"
			}
		},
		{
			"scope": "variable.parameter.toc",
			"settings": {
				"foreground": "#c5c8c6"
			}
		},


		// World of Warcraft API colors
		{
			"comment": "Catches everything not defined below",
			"scope": [
				"support.function.wow-api", "support.function.wow-library",
				"support.variable.wow-api", "support.variable.wow-library",
				"support.constant.wow-api", "support.constant.wow-library",
				"support.class.wow-api",    "support.class.wow-library"
			],
			"settings": {
				"foreground": "#ff8000"
			}
		},

		{
			"name": "WoW API functions",
			"scope": "support.function.wow-api",
			"settings": {
				"foreground": "#ff8000"
			}
		},
		{
			"scope": [
				"support.function.wow-api.protected",
				"support.function.wow-api.nocombat"
			],
			"settings": {
				"foreground": "#cc6600"
			}
		},

		{
			"name": "WoW Library (FrameXML)",
			"scope": "support.function.wow-library",
			"settings": {
				"foreground": "#ffaf3e"
			}
		},
		{
			"scope": "support.variable.wow-library.object",
			"settings": {
				"foreground": "#ffd500"
			}
		},
		{
			"scope": "support.variable.wow-library.value",
			"settings": {
				"foreground": "#d7ba7d"			// Same as entity.name.selector
			}
		},

		{
			"scope": "support.class.wow-api.method",
			"settings": {
				"foreground": "#ffaa00"
			}
		},

		{
			"name": "WoW API Constants",
			"comment": "These are all quoted strings",
			"scope": "support.constant.wow-api",
			"settings": {
				"foreground": "#4ec9b0"			// Same as support.type
			}
		},

		{
			"name": "Removed/deprecated stuff",
			"scope": "invalid.deprecated",
			"settings": {
				"foreground": "#f44747"
			}
		},
		{
			"name": "Removed/deprecated stuff",
			"scope": "invalid.removed",
			"settings": {
				"foreground": "#f44747",
				"fontStyle": "underline"
			}
		}
	]
}
