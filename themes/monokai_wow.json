{
	"name": "Monokai (Wow)",
	"include": "./theme-monokai/Monokai.json",
	"settings": [
		// Invalids -- just add underline to the current style
		// Note: Monokai.tmTheme uses a background setting which is not supported by VS Code (yet?)
		{
			"scope": "invalid",
			"settings": {
				"fontStyle": "underline"
			}
		},

		// Comments -- just add italics to the current style
		{
			"scope": [
				"comment.toc",
				"comment.lua"
			],
			"settings": {
				"fontStyle": "italic"
			}
		},

		// Lua -- These are missing in the default Monokai theme
		{
			"scope": [
				// "support.function.lua",
				// "support.function.library.lua",
				"support.function.metamethod.lua",
				"keyword.operator.logical.lua"	// Make 'or', 'and' and 'not' look like keywords
			],
			"settings": {
				"foreground": "#f92672"			// Same as keyword in Monokai.tmTheme
			}
		},
		{
			"scope": [
				"keyword.operator",
				"string.quoted.types.lua"
			],
			"settings": {
				"foreground": "#f92672",			// Same as keyword in Monokai.tmTheme
				"fontStyle": "italic"
			}
		},

		// TOC colors
		{
			"scope": "keyword.other.toc",
			"settings": {
				"foreground": "#f92672"			// Same as keyword in Monokai.tmTheme
			}
		},
		{
			"scope": "support.other.toc",
			"settings": {
				"foreground": "#f92672",		// Same as keyword in Monokai.tmTheme
				"fontStyle": "italic"
			}
		},

		// Blizzard's Lua language extensions
		{
			"scope": [
				"support.function.wow.language.lua"
			],
			"settings": {
				"foreground": "#66d9ef"			// Same as support.function in Monokai.tmTheme
			}
		},

		// World of Warcraft API
		{
			"comment": "Catches everything not defined below",
			"scope": [
				"support.function.wow",
				"support.constant.wow",
				"support.variable.wow",
				"support.class.wow"
			],
			"settings": {
				"foreground": "#ff8000"
			}
		},

		{
			"scope": [
				"support.function.wow.api"
			],
			"settings": {
				"foreground": "#ff8000"
			}
		},
		{
			"scope": [
				"support.function.wow.api.protected",
				"support.function.wow.api.nocombat"
			],
			"settings": {
				"foreground": "#cc6600"
			}
		},

		{
			"scope": [
				"support.function.wow.library"
			],
			"settings": {
				"foreground": "#ffaf3e"	// Slightly lighter
			}
		},
		{
			"scope": [
				"support.constant.wow.global"
			],
			"settings": {
				"foreground": "#ffd500"
			}
		},
		{
			"scope": [
				"support.class.wow.global"
			],
			"settings": {
				"foreground": "#ffd500"
			}
		},

		{
			"scope": [
				"support.class.wow.method"
			],
			"settings": {
				"foreground": "#ffaa00"
			}
		},

		// String (quoted) constants
		{
			"scope": [
				"support.constant.wow.quoted"
			],
			"settings": {
				"foreground": "#4ec9b0"
			}
		},

		// Removed/deprecated stuff
		{
			"scope": [
				"support.function.wow.removed",
				"support.constant.wow.removed",
				"support.variable.wow.removed",
				"support.class.wow.removed"
			],
			"settings": {
				"fontStyle": "underline",
				"foreground": "#f44747"
			}
		}
	]
}
