{
	"name": "Dark+ (wow-bundle)",
	"include": "./theme-defaults/dark_plus.json",
	"settings": [
		// Comments -- just add italics to the current style
		{
			"scope": "comment",
			"settings": {
				"fontStyle": "italic"
			}
		},

		// Escapes -- bold and slightly brighter than regular strings
		{
			"scope": "constant.character.escape",
			"settings": {
				"foreground": "#cfaa78",
				"fontStyle": "bold"
			}
		},

		// Keywords and operators -- These are missing in the default Dark and Dark+ themes
		{
			"scope": "support.function",
			"settings": {
				"foreground": "#c586c0"			// Same as keyword.control
			}
		},
		{
			"scope": "keyword.operator",
			"settings": {
				"foreground": "#569cd6"			// Same as keyword.new
			}
		},

		// TOC colors
		{
			"scope": "keyword.other.toc",
			"settings": {
				"foreground": "#c586c0"			// Same as keyword.control
			}
		},
		{
			"scope": "support.other.toc",
			"settings": {
				"foreground": "#569cd6"			// Same as keyword.new
			}
		},

		// World of Warcraft defaults colors. Customized below
		{
			"comment": "Catches everything not defined below",
			"scope": [
				"support.function.wow",
				"support.constant.wow",
				"support.variable.wow",
				"support.class.wow"
			],
			"settings": {
				"foreground": "#ff8000"
			}
		},

		{
			"name": "Blizzard's Lua language extensions",
			"scope": "support.function.wow.language",
			"settings": {
				"foreground": "#ff8000"
			}
		},

		{
			"name": "WoW API functions",
			"scope": "support.function.wow.api",
			"settings": {
				"foreground": "#ff8000"
			}
		},
		{
			"scope": [
				"support.function.wow.api.protected",
				"support.function.wow.api.nocombat"
			],
			"settings": {
				"foreground": "#cc6600"
			}
		},

		{
			"name": "WoW Library (FrameXML)",
			"scope": "support.function.wow.library",
			"settings": {
				"foreground": "#ffaf3e"	// Slightly lighter
			}
		},
		{
			"scope": "support.variable.wow",
			"settings": {
				"foreground": "#ffd500"
			}
		},
		{
			"scope": "support.variable.wow.value",
			"settings": {
				"foreground": "#d7ba7d"			// Same as entity.name.selector
			}
		},

		{
			"scope": "support.class.wow.method",
			"settings": {
				"foreground": "#ffaa00"
			}
		},

		{
			"name": "WoW API Constants",
			"comment": "These are all quoted strings",
			"scope": "support.constant.wow",
			"settings": {
				"foreground": "#4ec9b0"			// Same as support.type
			}
		},

		{
			"name": "Removed/deprecated stuff",
			"scope": [
				"support.function.wow.removed",
				"support.constant.wow.removed",
				"support.variable.wow.removed",
				"support.class.wow.removed"
			],
			"settings": {
				// "fontStyle": "underline",
				"foreground": "#f44747"
			}
		}
	]
}
