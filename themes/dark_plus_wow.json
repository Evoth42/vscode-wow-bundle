{
	"name": "Dark+ (Wow)",
	"include": "./theme-defaults/dark_plus.json",
	"settings": [
		// Invalids -- just add underline to the current style
		{
			"scope": "invalid",
			"settings": {
				"fontStyle": "underline"
			}
		},

		// Comments -- just add italics to the current style
		{
			"scope": [
				"comment.toc",
				"comment.lua"
			],
			"settings": {
				"fontStyle": "italic"
			}
		},

		// Lua -- These are missing in the default Dark and Dark+ themes
		{
			"name": "Lua language standard library",
			"scope": [
				"keyword.operator",
				"string.quoted.types.lua"
			],
			"settings": {
				"foreground": "#569cd6"	// Same as keyword.control in dark_vs.json
			}
		},
		{
			"name": "Lua language standard library",
			"scope": [
				"keyword.operator.logical.lua",	// Let 'or', 'and' and 'not' look like keyw<ords
				"support.function.lua",
				"support.function.metamethod.lua",
				"support.function.library.lua"
			],
			"settings": {
				"foreground": "#c586c0"	// Same as keyword.control in dark_plus.json
			}
		},

		// TOC colors
		{
			"name": "Standard tags",
			"scope": "keyword.other.toc",
			"settings": {
				"foreground": "#c586c0"	// Same as keyword.control in dark_plus.json
			}
		},
		{
			"name": "Custom tags",
			"scope": "support.other.toc",
			"settings": {
				"foreground": "#569cd6"	// Same as keyword.control in dark_vs.json
			}
		},

		// Blizzard's Lua language extensions
		{
			"name": "Lua language extensions",
			"scope": [
				"support.function.wow.language.lua"
			],
			"settings": {
				"foreground": "#ff8000"
			}
		},

		// World of Warcraft API
		{
			"comment": "Catches everything not defined below",
			"name": "WoW related stuff (generic)",
			"scope": [
				"support.function.wow",
				"support.constant.wow",
				"support.variable.wow",
				"support.class.wow"
			],
			"settings": {
				"foreground": "#ff8000"
			}
		},

		{
			"name": "WoW API functions",
			"scope": [
				"support.function.wow.api"
			],
			"settings": {
				"foreground": "#ff8000"
			}
		},
		{
			"name": "WoW API functions (protected/nocombat)",
			"scope": [
				"support.function.wow.api.protected",
				"support.function.wow.api.nocombat"
			],
			"settings": {
				"foreground": "#cc6600"	// Slightly darker
			}
		},

		{
			"name": "WoW global functions",
			"scope": [
				"support.function.wow.library"
			],
			"settings": {
				"foreground": "#ffaf3e"	// Slightly lighter
			}
		},
		{
			"name": "WoW global constants",
			"scope": [
				"support.constant.wow.global"
			],
			"settings": {
				"foreground": "#ffd500"
			}
		},
		{
			"name": "WoW global objects",
			"scope": [
				"support.class.wow.global"
			],
			"settings": {
				"foreground": "#ffd500"
			}
		},

		{
			"name": "WoW widget methods",
			"scope": [
				"support.class.wow.method"
			],
			"settings": {
				"foreground": "#ffaa00"
			}
		},

		// String (quoted) constants
		{
			"comment": "Catches everything not defined below",
			"name": "WoW string (quoted) constants",
			"scope": [
				"support.constant.wow.quoted"
			],
			"settings": {
				"foreground": "#4ec9b0"
			}
		},
		/*
		{
			"name": "WoW quoted constants: string parameters",
			"scope": [
				"support.constant.wow.quoted.function-parameter"
			],
			"settings": {
				"foreground": "#4ec9b0"
			}
		},
		{
			"name": "WoW quoted constants: widget script handlers",
			"scope": [
				"support.constant.wow.quoted.script-handler"
			],
			"settings": {
				"foreground": "#4ec9b0"
			}
		},
		{
			"name": "WoW quoted constants: event names",
			"scope": [
				"support.constant.wow.quoted.event-name"
			],
			"settings": {
				"foreground": "#4ec9b0"
			}
		},
		*/

		// Removed/deprecated stuff
		{
			"name": "WoW API removed/deprecated stuff",
			"scope": [
				"support.function.wow.removed",
				"support.constant.wow.removed",
				"support.variable.wow.removed",
				"support.class.wow.removed"
			],
			"settings": {
				"fontStyle": "underline",
				"foreground": "#f44747"
			}
		}
	]
}
