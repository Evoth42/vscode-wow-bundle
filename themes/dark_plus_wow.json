{
	"name": "Dark+ (Wow)",
	"include": "./theme-defaults/dark_plus.json",
	"settings": [

		// Invalid -- just add underline to the current style
		{
			"scope": "invalid",
			"settings": {
				"fontStyle": "underline"
			}
		},

		// Comments -- just add italics to the current style
		{
			"scope": [
				"comment.toc",
				"comment.lua"
			],
			"settings": {
				"fontStyle": "italic"
			}
		},

		// TOC file
		{
			"name": "Standard tags",
			"scope": "keyword.language.toc",
			"settings": {
				"foreground": "#ff8000"
			}
		},
		{
			"name": "Custom tags",
			"scope": "support.language.toc",
			"settings": {
				"foreground": "#ffaa00"
			}
		},

		// This is missing in Dark and Dark+ themes...
		{
			"name": "Lua language standard library",
			"scope": [
				"support.function.library.lua"
			],
			"settings": {
				"foreground": "#c586c0"
			}
		},

		// Blizzard's extensions to Lua language
		{
			"name": "Lua language extensions",
			"scope": [
				"support.function.wow.language.lua"
			],
			"settings": {
				"foreground": "#739be6"
			}
		},

		// World of Warcraft API
		{
			"name": "WoW related stuff (generic)",
			"scope": [
				"support.function.wow",
				"support.constant.wow",
				"support.variable.wow",
				"support.class.wow"
			],
			"settings": {
				"foreground": "#ff8000"
			}
		},

		{
			"name": "WoW API functions",
			"scope": [
				"support.function.wow.api"
			],
			"settings": {
				"foreground": "#ff8000"
			}
		},
		{
			"name": "WoW API functions (protected/nocombat)",
			"scope": [
				"support.function.wow.api.protected",
				"support.function.wow.api.nocombat"
			],
			"settings": {
				"foreground": "#e67300"
			}
		},

		{
			"name": "WoW library functions",
			"scope": [
				"support.function.wow.library"
			],
			"settings": {
				"foreground": "#f28d00"
			}
		},

		{
			"name": "WoW classes methods and scripts",
			"scope": [
				"support.class.wow.method",
				"support.class.wow.script"
			],
			"settings": {
				"foreground": "#ffaa00"
			}
		},
		{
			"name": "WoW global variables and constants",
			"scope": [
				"support.constant.wow",
				"support.variable.wow"
			],
			"settings": {
				"foreground": "#ffd500"
			}
		},

		{
			"name": "WoW API removed/deprecated stuff",
			"scope": [
				"support.function.wow.removed",
				"support.constant.wow.removed",
				"support.variable.wow.removed",
				"support.class.wow.removed"
			],
			"settings": {
				"fontStyle": "underline",
				"foreground": "#f44747"
			}
		}
	]
}
